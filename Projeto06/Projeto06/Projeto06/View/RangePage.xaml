<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto06.View.RangePage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="txtSlider"/>
            <Slider Minimum="0" Maximum="1000" Value="300" ValueChanged="OnSliderValueChanged"/>

            <Label x:Name="txtStepper"/>
            <Stepper Minimum="0" Maximum="10" Increment="2" Value="0" ValueChanged="OnStepperValueChanged"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>