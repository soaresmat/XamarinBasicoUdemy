<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto05.View.AbsoluteLayoutPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView Color="Blue" AbsoluteLayout.LayoutBounds="50, 0, 200, 50" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <BoxView Color="Yellow" AbsoluteLayout.LayoutBounds="50, 50, 200, 200" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <BoxView Color="Green" AbsoluteLayout.LayoutBounds="0, 100, 50, 200" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

            <BoxView Color="Red" AbsoluteLayout.LayoutBounds=".5, .5, .3, .3" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>